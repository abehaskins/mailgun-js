{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "lib/",
        "baseUrl": "src/",
        "allowJs": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "types" : [
            "node"
        ]
    },
    "include": [
        "src/**/*"
    ]
}
