{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "lib",
        "baseUrl": ".",
        "allowJs": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "types" : [
            "chai",
            "node"
        ]
    },
    "include": [
        "src/**/*"
    ]
}
